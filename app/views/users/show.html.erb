<div class="container-fluid">
  <h3 class="text-center m-5"><%= @user.nickname%>さんのFlogs</h3>
  <div class="row">
    <div class="col-lg-2">
     <div class="card profile-card">
       <div class="card-body">
          <div class="text-center"><%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "00582.png", size:'100x100'  ,class: 'rounded-circle'%></div>
          <h5 class="card-title"><%= @user.nickname %></h5>
          <p class="card-text"><%= @user.introduction %></p>
          <div class="follow">
            <div>
              <%= link_to user_lists_follow_list_path(@user.id) do %>
               <%= @user.follow.count %>フォロー中
              <% end %>
            </div>
            <div>
              <%= link_to user_lists_followed_list_path(@user.id) do %>
               <%= @user.followed.count %>フォロワー
              <% end %>
            </div>
          </div>
            <% if current_user%>
              <% if current_user.following?(@user) %>
                <%= link_to "フォロー中", user_follows_path(@user.id), method: :delete, class:"btn btn-primary" %>
              <% else %>
                <%= link_to "フォローする", user_follows_path(@user.id), method: :post, class:"btn btn-light" %>
              <% end %>
            <% else %>
           <% end %>
           <p><%= link_to "MyLists", user_mylist_path(@user.id), class:"btn btn-light" %></p>
        </div>
       </div>
     </div>

    <div class="col-lg-10">
      <div class="row">
        <% @user.wrriten_flogs.each do |flog| %>
          <div class="col-lg-4 mb-2">
            <div class="flog-item card p-3">
              <div class="text-center image-area">
                <%= link_to movie_path(flog.movie_id) do %>
                  <%= image_tag("https://image.tmdb.org/t/p/w154/" + flog.movie_poster ) %>
                <% end %>
              </div>
              <div class="card-body">
                <div class="card-title text-center flog-title ">
                  <h6><%= flog.movie_title %></h6>
                      <div class="card-text mb-3 text-center">
                        <span id="star-rate-<%= flog.id %>"></span>
                        <script>
                          $('#star-rate-<%= flog.id %>').raty({
                            size: 36,
                            starOff: "<%= asset_path('star-off.png') %>",
                            starOn: "<%= asset_path('star-on.png') %>",
                            starHalf: "<%= asset_path('star-half.png') %>",
                            half: true,
                            readOnly: true,
                            score: <%= flog.score %>
                          });
                        </script>
                      </div>
                  </div>
                  <div class="main-content">
                    <p class="card-text flog-review"><%= flog.review %></p>
                    <div class="card-text"><%= flog.likes.count %> いいね </div>
                    <span class="card-text"><%= flog.created_at.strftime('%Y/%m/%d') %></span>
                    <div>
                      <%= link_to edit_flog_path(flog.id) do %>
                        <%= image_tag("edit.svg") %>
                      <% end %>
                      <%= link_to flog_path(flog.id), method: :delete do %>
                        <%= image_tag("trash-3.svg") %>
                      <% end %>
                    </div>
                 </div>
                <% sleep 0.3 %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
     <%= paginate @flogs%>
   </div>
 </div>
</div>
