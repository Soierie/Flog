<div class="container-fluid">
  <h3 class="text-center m-5">MtList</h3>
  <div class="row">
    <div class="col-lg-2">
      <div class="card profile-card">
        <div class="card-body">
          <div class="text-center mb-2"><%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "00582.png", size:'100x100'  ,class: 'rounded-circle'%></div>
          <h5 class="card-title text-center"><%= @user.nickname %></h5>
          <p class="card-text text-center"><%= @user.introduction %></p>
           <div class="follow">
            <div>
              <%= link_to user_lists_follow_list_path(@user.id) do %>
               <%= @user.follow.count %>フォロー中
              <% end %>
            </div>
            <div>
              <%= link_to user_lists_followed_list_path(@user.id) do %>
               <%= @user.followed.count %>フォロワー
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <div class="col-lg-10">
    <div class="row">
      <% @mylists.each do |mylist| %>
      <div class="col-lg-3 mb-2">
        <div class="mylist card p-3">
          <div class="text-center image-area">
            <%= link_to movie_path(mylist.movie_id) do %>
            <%= image_tag("https://image.tmdb.org/t/p/w154/" + mylist.movie_poster ) %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-title text-center ">
              <h6><%= mylist.movie_title %></h6>
            </div>
            <div class="mylist-delete-button">
              <%= link_to mylist_path(mylist.id), method: :delete do %>
              <%= image_tag("trash-3.svg") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% sleep 0.3 %>
      <% end %>
    </div>
  </div>
 </div>
</div>
<%= paginate @mylists %>
